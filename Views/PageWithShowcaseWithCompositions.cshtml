@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.PageWithShowcaseWithCompositions>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
	Layout = "_Layout.cshtml";
	
	ViewData["PageTitle"] = @Model.Value("pageTitle");
	ViewData["PageDescription"] = @Model.Value("pageDescription");
	ViewData["PageKeywords"] = @Model.Value("pageKeywords");
}

<header>
    @await Html.PartialAsync("_Navigation")
    
    @await Html.PartialAsync("_ShowCase")
</header>

<main>
    @await Html.PartialAsync("_Brands")
</main>

<section class="features">
    <div class="container">
        <div class="content">
            <div>
                <p>@Model.Value("serviceFeaturesSectionTitle")</p>
                <h1>@Model.Value("serviceFeaturesSectionHeading")</h1>
                <a class="btn-yellow" href="@Model.Value("serviceFeaturesButtonUrl")">@Model.Value("serviceFeaturesButtonText")<i class="bi bi-arrow-up-right"></i></a>
            </div>
            <div>
                <div class="feature-boxes">
                    @Html.GetBlockListHtml(Model.ServiceFeatures)
                </div>
            </div>
        </div>
    </div>
</section>