@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.ContactPage>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;

@{
	Layout = "_Layout.cshtml";
	ViewData["PageTitle"] = @Model.Value("pageTitle");
	ViewData["PageDescription"] = @Model.Value("pageDescription");
	ViewData["PageKeywords"] = @Model.Value("pageKeywords");


}
<header>
    @await Html.PartialAsync("_Navigation")
    @await Html.PartialAsync("_Breadcrumb")
</header>
<main>
    
<section class="contact-information">
    <div class="container">
        <div class="infobox">
            <div class="black-circle"><i class="fa-sharp fa-regular fa-location-dot"></i>
                <h5>Visit us</h5>
                <div class="address-info">
                    <p>Sveavägen 31</p>
                    <p>111 34 STOCKHOLM</p>
                </div>
            </div>
            <div class="black-circle"><i class="fa-sharp fa-regular fa-phone-volume"></i>
                <h5>Call us</h5>
                <div class="phone-info">
                    <p>+46 (8) 121 470 50</p>
                    <p>+46 (8) 121 470 51</p>
                </div>
            </div>
            <div class="black-circle"><i class="fa-sharp fa-regular fa-envelope"></i>
                <h5>Email us</h5>
                <div class="email-info">
                    <p>info@crito.com</p>
                    <p>support@crito.com</p>
                </div>
            </div> 
        </div>
    </div>    
</section>

<section class="contact-form">
    <div class="container">
        <h2>Leave us a message for any information</h2>


        @using (Html.BeginUmbracoForm("Index", "Contacts", FormMethod.Post))
        {
            <div asp-validation-summary="All"></div>
        
            <input name="name" type="text" placeholder="Name">
            <input name="email" type="email" placeholder="Email">
            <textarea name="message" placeholder="Your Message"></textarea>
        
            <div class="d-grid">
                <button class="btn-theme">Send Message<i class="fa-solid fa-arrow-up-right"></i></button>
            </div>
        }



    </div>
</section>

